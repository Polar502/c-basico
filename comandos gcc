Install

sudo apt-get install libgtk+3.0-dev


GCC

gcc $( pkg-config --cflags gtk4 ) -o helloworld helloworld.c $( pkg-config --libs gtk4 )

gcc $( pkg-config --cflags gtk4 ) -o basico basico.c $( pkg-config --libs gtk4 )

gcc basico.c `pkg-config --cflags gtk+-3.0 --libs gtk+-3.0` -o basico

gcc basico.c `pkg-config --cflags gtk4 --libs gtk4` -o basico


